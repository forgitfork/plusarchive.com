{
  "require": {
    "php": ">= 7.1.0",
    "yiisoft/yii2": "2.0.15.1",
    "creocoder/yii2-taggable": "2.0.0",
    "jamband/ripple": "0.5.0",
    "hashids/hashids": "3.0.0"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "2.0.13",
    "yiisoft/yii2-gii": "2.0.7",
    "vlucas/phpdotenv": "2.5.0",
    "codeception/codeception": "2.4.4",
    "twbs/bootstrap": "3.3.7"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/inputmask": "*",
    "bower-asset/bootstrap": "*",
    "bower-asset/punycode": "*",
    "bower-asset/yii2-pjax": "*",
    "bower-asset/typeahead.js": "*"
  },
  "autoload": {
    "files": ["helpers/functions.php"]
  },
  "scripts": {
    "dev": "composer install --quiet && npm install --slient && npm run dev",
    "clean": "rm -rf node_modules runtime/* tests/_output/* vendor web/assets/*",
    "show-asset-version": "composer show --tree | grep -o 'bower-asset.*' | sort | uniq"
  }
}
