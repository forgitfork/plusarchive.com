{
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "creocoder/yii2-taggable": "^2.0",
    "jamband/ripple": "^0.10.2",
    "hashids/hashids": "^4.1",
    "yiisoft/yii2": "^2.0"
  },
  "require-dev": {
    "vlucas/phpdotenv": "^5.4",
    "yiisoft/yii2-debug": "^2.1",
    "codeception/module-yii2": "^1.1",
    "codeception/module-webdriver": "^2.0"
  },
  "provide": {
    "bower-asset/jquery": "*",
    "bower-asset/inputmask": "*",
    "bower-asset/punycode": "*",
    "bower-asset/yii2-pjax": "*"
  },
  "autoload": {
    "files": [
      "helpers/functions.php"
    ]
  },
  "scripts": {
    "dev": "composer install --quiet && yarn --silent && yarn dev",
    "serve": "php -S localhost:8000 -t web",
    "clear": "rm -rf runtime/* tests/_output/* web/assets/*",
    "clean": "rm -rf node_modules runtime/* tests/_output/* vendor web/assets/*",
    "show-asset-version": "composer show --tree | grep -o 'bower-asset.*' | sort | uniq"
  }
}
